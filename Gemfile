source 'https://rubygems.org'
ruby '2.0.0'
gem 'sinatra'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Better errors (https://github.com/charliesome/better_errors)
group :development do
  gem "better_errors"
end

# Better Errors' advanced features
gem "binding_of_caller"

#The super fantastic way of getting Gravatars (https://github.com/chrislloyd/gravtastic)
gem 'gravtastic'

gem 'devise'

# Use sqlite3 as the database for Active Record
gem 'sqlite3', :group => [:development, :test]

group :production do
#  gem 'thin'
  gem 'pg'
  gem 'rails_12factor'
end

#Slim progress bars for Ajax'y applications (https://rubygems.org/gems/nprogress-rails)
gem 'nprogress-rails', "~> 0.1.2.2"

gem 'json'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

gem 'jquery-turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# https://rubygems.org/gems/font-awesome-rails
gem "font-awesome-rails"

# rspec (https://rubygems.org/gems/rspec)
gem "rspec", "~> 2.14.1"

# New Relic for deployment
gem 'newrelic_rpm'

# for attr_accessible
gem 'protected_attributes'

gem 'capybara'

# for Phusion Passenger
gem 'passenger'

# https://github.com/thoughtbot/factory_girl_rails
gem 'factory_girl_rails'

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]
