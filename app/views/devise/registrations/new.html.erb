<style>
#full-screen-background-image {
  z-index: -999;
  min-height: 100%;
  min-width: 1024px;
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  left: 0;
}

#wrapper {
  position: relative;
  width: 100%;
  margin: 140px auto;
  color: #333;
}

.login-form {
  background-color: #eee;
  padding: 15px 15px 15px 15px;
  -webkit-border-radius: 6px 6px 6px 6px;
  -moz-border-radius: 6px 6px 6px 6px;
  border-radius: 6px 6px 6px 6px;
  z-index:2;
  position:relative;
}

.featurette-heading {
  padding-top: 100px;
  font-size: 58px;
  font-weight: 400;
  line-height: 1;
  letter-spacing: -1px;
}
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
    <div class="navbar-header">
    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
    		<span class="icon-bar"></span>
        	<span class="icon-bar"></span>
        	<span class="icon-bar"></span>
      	</button>
      	<%= link_to image_tag('logo.png'), root_path, :class => 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-btn">
        <li><a href="#"><strong><small>ABOUT</small></strong></a></li>
        <li><a href="#"><strong><small>PRICING</small></strong></a></li>
        <li><a href="#"><strong><small>ENTERPRISE</small></strong></a></li>
        <li><a href="#"><strong><small>APPLICATION</small></strong></a></li>
      </ul>
      <div class="nav navbar-btn pull-right">
	        <%= link_to login_path, :type => 'button', :class => 'btn btn-default btn-danger navbar-btn' do %>
	          <span class="glyphicon glyphicon-envelope"></span>
	          Have an account? Sign in
	        <% end %>
	    </div>
    </div>
  </div>
</div>
<!-- Featured Job Header Start -->
<img alt="full screen background image" src="/images/signup-bg.jpg" id="full-screen-background-image" />
<div id="wrapper">
  <div class="container">
    <div class="row">
    	<div class="col-md-8">
    		<h1 class="featurette-heading">Suit Up.<br><span class="text-muted">Apply and acquire the best job available.</span></h1>
    	</div>
    	<div class="col-md-4">
	        <div class="login-form">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<p class="lead text-danger"><strong>Why wait? It's free!</strong><br>
					<small>Sign up now and get everything work online</small></p>
					<%= devise_error_messages! %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <div class="control-group">
                  <%= f.text_field :first_name, :autofocus => true, :class => 'form-control', :type => 'text', :placeholder => 'First Name', :autocomplete => 'off' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="control-group">
                  <%= f.text_field :last_name, :class => 'form-control', :type => 'text', :placeholder => 'Last Name', :autocomplete => 'off' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group control-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
              <%= f.text_field :username, :class => 'form-control', :type => 'text', :placeholder => 'Username', :autocomplete => 'off' %>
            </div>
          </div>
					<div class="form-group">
						<div class="input-group control-group">
							<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
							<%= f.email_field :email, :class => 'form-control', :type => 'email', :placeholder => 'Email address', :autocomplete => 'off' %>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group control-group">
							<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
							<%= f.password_field :password, :class => 'form-control', :type => 'password', :placeholder => 'Password' %>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group control-group">
							<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
							<%= f.password_field :password_confirmation, :class => 'form-control', :type => 'password', :placeholder => 'Confirm password' %>
						</div>
					</div>
					<p class="text-right">* All fields are required</p>
					<%= f.submit "Sign up", :class => 'btn btn-danger btn-block btn-lg' %>
				<% end %>
			</div>
		</div>
	</div>
  </div>
</div>
<!-- Featured Job Header End -->