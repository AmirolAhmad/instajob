<style>
#full-screen-background-image {
  z-index: -999;
  min-height: 100%;
  min-width: 1024px;
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  left: 0;
}

#wrapper {
  position: relative;
  width: 40%;
  margin: 180px auto;
  color: #333;
}

.login-form {
  background-color: #eee;
  padding: 15px 15px 15px 15px;
  -webkit-border-radius: 6px 6px 6px 6px;
  -moz-border-radius: 6px 6px 6px 6px;
  border-radius: 6px 6px 6px 6px;
  z-index:2;
  position:relative;
}
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
    <div class="navbar-header">
    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
    		<span class="icon-bar"></span>
        	<span class="icon-bar"></span>
        	<span class="icon-bar"></span>
      	</button>
      	<%= link_to image_tag('logo.png'), root_path, :class => 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-btn">
        <li><a href="#"><strong><small>ABOUT</small></strong></a></li>
        <li><a href="#"><strong><small>PRICING</small></strong></a></li>
        <li><a href="#"><strong><small>ENTERPRISE</small></strong></a></li>
        <li><a href="#"><strong><small>APPLICATION</small></strong></a></li>
      </ul>
      <div class="nav navbar-btn pull-right">
        <%= link_to new_member_registration_path, :type => 'button', :class => 'btn btn-default btn-danger navbar-btn' do %>
          <span class="glyphicon glyphicon-user"></span>
          Create Free Account
        <% end %>
      </div>
    </div>
  </div>
</div>
<img alt="full screen background image" src="/images/reset-pass-bg.jpg" id="full-screen-background-image" />
<div id="wrapper">
  <div class="container">
    <div class="login-form">
      <p class="lead">Forgot Your Password?</p>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <p>Enter the email address you gave us when you signed up, and we'll send you a link to create a new password.</p>
      <%= devise_error_messages! %>
      <div class="form-group">
      	<div class="input-group control-group">
      		<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
      		<%= f.email_field :email, :autofocus => true, :class => 'form-control', :type => 'email' %>
      	</div>
      </div>
      <%= f.submit "Send me reset password instructions", :class => 'btn btn-danger btn-sm' %>
      <%= link_to "Return to login page", new_member_session_path, :class => 'btn btn-primary btn-sm' %>
      <% end %>
  	</div>
  </div>
</div>